<% include ../partials/header%>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center;">Add a new comment to <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <!-- the action site should be the same with the POST site-->
            <form action="/campgrounds/<%=  campground._id %>/comments" method="POST"> 
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="author" placeholder="name">-->
                <!--</div>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/campgrounds/<%=  campground._id %>">back</a>
        </div>
        
    </div>
</div>

